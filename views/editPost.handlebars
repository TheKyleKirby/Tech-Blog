<h1>Edit Post</h1>

{{#if error}}
  <p>{{error}}</p>
{{/if}}

<div class="post-card">
  <div class="post-card-header">
    <h3>Edit Post</h3>
  </div>
  <div class="post-card-body">
    <form
      action="/dashboard/update/{{post.dataValues.id}}"
      method="POST"
      class="edit-post-form"
    >
      <div>
        <label for="title">Title:</label>
        <input
          type="text"
          id="title"
          name="title"
          value="{{post.dataValues.title}}"
          required
        />
      </div>
      <div>
        <label for="content">Content:</label>
        <textarea
          id="content"
          name="content"
          required
        >{{post.dataValues.content}}</textarea>
      </div>
      <button type="submit">Update Post</button>
    </form>
  </div>
</div>